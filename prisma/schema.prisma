// ユーザーテーブル(FirebaseのUIDを主キーに設定)
model User {
  firebaseUid   String   @id
  email         String   @unique
  name          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// パズルテーブル
model Puzzle {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  user_answer   String // ユーザーの解答
  solution      String // 正答
  user_id       String // ユーザーID(FirebaseのUID)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}